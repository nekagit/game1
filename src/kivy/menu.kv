#:kivy 1.0.9


<Player>:
    size: 60, 80
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.source


<Platform>:
    canvas.before:
    Rectangle: 
        size: 10, 200
        pos: self.center
        rgb: (0, 1, 1)

<Game>:
    player: player
    platform: platform
    canvas.before: 
        Line:
            width: 6
            rectangle: self.x, self.y, self.width, self.height
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    Player:
        id: player
        center: self.parent.center
    Platform:
        id: platform
        center: self.parent.center