#:kivy 1.0.9

<GateGuardianMonster>:
    size: 25, 25 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size   
            source: 'images/background.png'

<GateGuardianTree>:
    size: 25, 25 
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size   
            source: 'images/background.png'

<GateGuardianPlayer>:
    size: 80, 100
    # canvas:
    #     Color:
    #         rgb: 0.7, 0.2, 0.3
        
            

<GateGuardianGame>:
    player: player
    canvas.before: 
        Line:
            width: 6
            rectangle: self.x, self.y, self.width, self.height
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/map.jpg'
    Label:
        font_size: 25  
        center_x: root.width / 20
        top: root.top
        text: str(root.player.score)
    
    Label:
        id: score
        font_size: 25  
        center_x: root.width / 10
        top: root.top
        text: str(root.player.life)
    
    GateGuardianPlayer:
        id: player
        center: self.parent.center
    