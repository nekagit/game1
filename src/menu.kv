#:kivy 1.0.9


<Player>:
    size: 60, 80
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.source


<Platform>:
    size: 60, 80
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

<Game>:
    player: player
    platform: platform
    canvas.before: 
        Line:
            width: 6
            rectangle: self.x, self.y, self.width, self.height
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/background.png'
    Player:
        id: player
    Platform:
        id: platform
        center: self.parent.center