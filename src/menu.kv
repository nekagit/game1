
<Platform>:
    size: 10, 10
    pos: 300, 120
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

<Player>:
    size: 60, 80
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.source


<LevelTempel>:
    player: player
    platform: platform
    canvas:
        Rectangle:
            size: self.size
            source: 'img/background.png'

    Player:
        id: player  

    Platform:
        id: platform


<Game>:
    level: level
    canvas.before: 
        Rectangle:
            pos: self.pos
            size: self.size
    LevelTempel:
        id: level